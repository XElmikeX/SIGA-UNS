# .htaccess en raíz
RewriteEngine On

# Permitir acceso directo a health.php sin redirección
RewriteCond %{REQUEST_URI} ^/health\.php$
RewriteRule .* - [L]

# Deshabilitar redirección HTTPS para healthcheck
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP:X-Forwarded-Proto} =http
    RewriteCond %{REQUEST_URI} !^/health\.php$
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# También asegurar que index.php funcione
DirectoryIndex index.php

<IfModule mod_headers.c>
    Header always set X-HealthCheck "OK"
</IfModule>